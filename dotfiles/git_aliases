# vim: foldmethod=marker

alias ga="git add -p"
alias gall="git add --all"
alias gm="git merge"
alias gd="git diff"
alias gdc="git diff --cached"
alias gls="git branch -l"
alias glr="git branch -r"
alias gcp="git cherry-pick"
alias gup="git fetch; git pull"
alias gc="git commit -S"
alias gca="git commit --amend"
alias gcs="git commit --amend --no-edit"
alias gcm="git commit -m"
alias gpo="git push origin"
alias gcl="git clone"
alias gst="git status"
alias gl="git log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"
alias grb="git rebase"
alias grbi="git rebase -i"
alias gpr="git pull-request"
alias gr="git rebase"
alias grc="git rebase --continue"

# Functions ------------------------------------------------ {{{
# delete a branch, just like "git branch -D". If no branch name is provided,
# display a list of all local branches to pick from (can pick multiple).
function gbd {
  if [ -n "$1" ]; then
    git branch -D "$@"
  else
    git branch -D $(git branch -l | fzf -m | tr -s " " | sed 's/ //g')
  fi
}

# check out a local branch, just like "git checkout". If no branch name is
# provided, display a list of all local branches to pick from.
function gco {
  if [ -n "$1" ]; then
    git checkout "$@"
  else
    git checkout $(git branch -l | fzf | sed 's/ //g')
  fi
}

# pick from a list of all remote branches.
function gcor {
  git checkout $(git branch -r | sed 's/.*origin\///g' | fzf | sed 's/ //g')
}
#}}}
