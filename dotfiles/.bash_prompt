# https://github.com/git/git/blob/v1.8.4/contrib/completion/git-prompt.sh
source ~/.git-prompt.sh

if tput setaf 1 &> /dev/null; then
  tput sgr0; # reset colors
  bold=$(tput bold);
  reset=$(tput sgr0);
  # Solarized colors, taken from http://git.io/solarized-colors.
  black=$(tput setaf 0);
  blue=$(tput setaf 33);
  cyan=$(tput setaf 37);
  green=$(tput setaf 64);
  orange=$(tput setaf 166);
  purple=$(tput setaf 125);
  red=$(tput setaf 124);
  violet=$(tput setaf 61);
  white=$(tput setaf 15);
  yellow=$(tput setaf 136);
else
  bold='';
  reset="\e[0m";
  black="\e[1;30m";
  blue="\e[1;34m";
  cyan="\e[1;36m";
  green="\e[1;32m";
  orange="\e[1;33m";
  purple="\e[1;35m";
  red="\e[1;31m";
  violet="\e[1;35m";
  white="\e[1;37m";
  yellow="\e[1;33m";
fi;

# Set the terminal title and prompt.
prompt_pre="\[\033]0;\W\007\]";  # working directory base name
prompt_pre+="\[${bold}\]\n";     # bold + newline
prompt_pre+="\[${cyan}\]\w";     # working directory full path

# Highlight the hostname when connected via SSH.
if [[ "${SSH_TTY}" ]]; then
  prompt_pre+="\[${white}\] in \[${bold}${red}\]\h"; # host
fi;
# GIT_PS1_SHOWDIRTYSTATE=1
# GIT_PS1_SHOWUNTRACKEDFILES=1
GIT_PS1_SHOWSTASHSTATE=1
GIT_PS1_SHOWUPSTREAM=1
# prompt_pre+="${white} on \${green}\$(__git_ps1 \"%s\")"
prompt_pre+="\[${green}\]"
prompt_post="\n\[${bold}${orange}\]Î» \[${reset}\]";
PROMPT_COMMAND='__git_ps1 "${prompt_pre}" "${prompt_post}"'
